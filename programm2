#include <cstdlib>
#include <string.h>
#include <stdio.h>
#include <iostream>
//#include <conio.h>
using namespace std;

class TImage
{
    int img[1000][1000];
    int mx;
    int my;
public:
    TImage(){}
    TImage(int tmy, int tmx)
    {
        mx=tmx;
        my=tmy;
    }
    void capture()
    {
        mx=12;
        my=18;
    }

    void drawHLine(int tmy, int c)
    {
        int i;
        for(i=0; i<mx; i++)
        {
            printf("%d %d %d\n", tmy, i, c);
            img[tmy][i]=c;
        }
    }

    void drawVLine(){

    }

    void show()
    {
        int i,j;
        printf("P1\n");
        printf("%d", mx);
        printf("%d", my);
        for (i=0; i<my; i++)
            {
            for(j=0; j<mx; j++)
                printf("%d", img [i][j]);
            printf("\n");
            }
    }
};

int main ()
{
    TImage a(6,4);
    a.drawHLine(4,1);
    a.show();
    return 0;
}
